    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "downlevelIteration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["dist", "node_modules"]
}
